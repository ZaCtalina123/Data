
#include <Servo.h>

Servo servo1;  // Создаем объект для первого серво
Servo servo2;  // Создаем объект для второго серво

void setup() {
  servo1.attach(9);  // Подключаем первый сервопривод к пину 9
  servo2.attach(10); // Подключаем второй сервопривод к пину 10
  servo2.write(0);   // Начальное положение второго серво
}

void loop() {
  // Вращаем первый сервопривод от 0 до 180 градусов
  for (int pos = 0; pos <= 180; pos += 1) {
    servo1.write(pos);   // Устанавливаем угол
    delay(15);           // Ждем, пока сервопривод достигнет угла
  }

  // Поднимаем второй сервопривод на 1 градус
  for (int angle = 0; angle <= 180; angle += 1) {
    servo2.write(angle); // Устанавливаем угол второго серво
    delay(15);           // Ждем, пока сервопривод достигнет угла
  }

  // Возвращаем первый сервопривод от 180 до 0 градусов
  for (int pos = 180; pos >= 0; pos -= 1) {
    servo1.write(pos);   // Устанавливаем угол
    delay(15);           // Ждем, пока сервопривод достигнет угла
  }

  // Поднимаем второй сервопривод на 1 градус
  for (int angle = servo2.read(); angle < 180; angle += 1) {
    servo2.write(angle); // Устанавливаем угол второго серво
    delay(15);           // Ждем, пока сервопривод достигнет угла
  }

  // Проверяем, достиг ли второй сервопривод 180 градусов
  if (servo2.read() >= 180) {
    // Если достиг, останавливаем цикл
    while (true); // Бесконечный цикл, остановка программы
  }
}
